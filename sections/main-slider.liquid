
<div class="discover_new">
	<div class="discover_content">
		<div class="discover_title">
			<div class="stripes">{% render 'stripes' %}</div>
            {% if section.settings.header != blanc %}          
                <h1 class="big_title color-white">{{ section.settings.header }}</h1>
            {% endif %}
			<div class="star">{% render 'star' %}</div>
			<div class="rainbow">{% render 'rainbow' %}</div>
		</div>
		<div class="discover_buttons">
			<a class="pink_button" href="#">Shop now</a>
			<a class="yellow_button" href="#">About us</a>
		</div>
	</div>
    <button class="discover_prev">{%render 'icon-left-big'%}</button>
    <button class="discover_next">{%render 'icon-right-big'%}</button>
	<div class="discover_slider">      
		<div class="discover_item">
            {% if section.settings.image != blanc %}
                <img class="discover_item_photo" src= "{{ section.settings.image | img_url: "master" }}" alt="">
             {% endif %}
		</div>
		<div class="discover_item">
            {% if section.settings.image_2 != blanc %}
                <img class="discover_item_photo" src= "{{ section.settings.image_2 | img_url: "master" }}" alt="">
             {% endif %}
		</div><div class="discover_item">
            {% if section.settings.image_3 != blanc %}
                <img class="discover_item_photo" src= "{{ section.settings.image_3 | img_url: "master" }}" alt="">
             {% endif %}
		</div>
	</div>
</div>
{% schema %}
  {
    "name": "main-slider",
    "settings": [
        {
            "type": "text",
            "id": "header",
            "label": "Header"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Slideshow"
        },
        {
            "type": "image_picker",
            "id": "image_2",
            "label": "Slideshow"
        },
        {
            "type": "image_picker",
            "id": "image_3",
            "label": "Slideshow"
        }
    ],
    "presets": [
        {
            "name":"main-slider"
        }
    ]
  }
{% endschema %}
